<div class="box">
    <h1>Administrar Usuarios</h1>
    <a href="/admin/dashboard" class="button">Dashboard</a>
    <a href="/realTimeProducts" class="button">Administrar Productos</a>
    <a href="/logout" class="button">Cerrar Sesión</a>
    <div class="box">
        <h2>Lista de Usuarios</h2>
        {{#if users.length}}
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo Electrónico</th>
                    <th>Edad</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{this.first_name}} {{this.last_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.age}}</td>
                    <td>{{this.role}}</td>
                    <td>
                        <button class="change-role-button" data-user-id="{{this._id}}"
                            data-current-role="{{this.role}}">
                            Cambiar a {{#if (eq this.role "user")}}Premium{{else}}User{{/if}}
                        </button>
                        <button class="delete-user-button" data-user-id="{{this._id}}">
                            Eliminar
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p>No hay usuarios registrados.</p>
        {{/if}}
    </div>
    <button id="delete-inactive-users" class="button">Eliminar Usuarios Inactivos</button>
</div>

<!-- Incluir archivo JavaScript -->
<script src="/js/userManager.js"></script>
